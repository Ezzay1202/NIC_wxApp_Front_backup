/* pages/myinformation/myinformation.wxss */
.background{
  padding: 30rpx;
  width: 90%;
  height: 1182rpx;
  display: grid;
  grid-template-columns: repeat(4,1fr);
  grid-template-rows: repeat(7,1fr);
}
.box{
  box-sizing: border-box;
  border-radius: 10rpx;
  margin: .5em;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.2);
  box-shadow: 5rpx 5rpx #efefef;
}
.box >image{
  position: relative;
  z-index:-2;
  width:100%;
  height: 100%;
  border-radius: 10rpx;
}
.box >text{
  position: relative;
  bottom: 55rpx;
  z-index: 0;
  color: #efefef;
  font-size: 30rpx;
}
.grid{
  grid-row: 2/4;
  grid-column: 1/3;
}
.box .bigtext{
  color: white;
  font-size: 50rpx;
}
.bigtext-max{
  font-size: 100rpx;
  color: white;
  position: relative;
  top: 50rpx;
  -webkit-box-align: center;

}
.set{
  box-sizing: border-box;
  padding: .1em;
  width: 100%;
  height: 100%;
}
.set image{
  z-index: 0;
  width: 80%;
  height: 80%;
}
